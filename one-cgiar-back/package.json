{
    "name": "one-cgiar-back",
    "version": "1.0.0",
    "description": "one cgiar submission tool back-end project",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "start": "set debug=* && npx tsnd ./src/index.ts --respawn --transpileOnly",
        "start:dev": "nodemon",
        "docs": "apidoc -i src -o ../docs",
        "lint": "eslint  \"**/*.ts\"",
        "lint:fix": "eslint --fix  \"**/*.ts\"",
        "format": "prettier --write \"**/*.ts\"",
        "test": "mocha -r ts-node/register src/**/*.test.ts --exit",
        "prod": "set debug=* && npx tsnd ./dist/index.js --respawn --transpileOnly",
        "coverage": "nyc npm run test",
        "dev": "tsc-watch --onSuccess \"node dist/index.js\" ",
        "synch": "ts-node ./node_modules/typeorm/cli.js schema:sync",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "migrations": "ts-node ./node_modules/typeorm/cli.js migration:run",
        "migration:create": "npm run typeorm -- migration:create -n",
        "docker:build": "docker build -t onecgiarback .",
        "docker:run": "docker run -dti --name onecgiarback -p 3000:3000 --link mysqlciat:mysql onecgiarback"
    },
    "author": "f.elvira@cgiar.org",
    "license": "ISC",
    "dependencies": {
        "accesscontrol": "^2.2.1",
        "activedirectory": "^0.7.2",
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "class-validator": "^0.12.2",
        "class-validator-jsonschema": "^3.0.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "exceljs": "^4.2.1",
        "express": "^4.17.1",
        "got": "^11.8.1",
        "helmet": "^4.2.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mkdirp": "^1.0.4",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "mysql": "^2.18.1",
        "node-cron": "^3.0.0",
        "nodemailer": "^6.6.0",
        "nodemailer-express-handlebars": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.29",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.9",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/lodash": "^4.14.170",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.7",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "@types/chai": "^4.2.10",
        "@types/chai-http": "^4.2.0",
        "@types/mocha": "^7.0.2",
        "nodemon": "^2.0.6",
        "ts-node-dev": "^1.0.0",
        "tsc-watch": "^4.2.9",
        "typescript": "^4.0.5",
        "apidoc": "^0.20.0",
        "eslint": "^6.8.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "mocha": "^8.2.1",
        "nyc": "^15.0.0",
        "prettier": "^2.0.2"
    }
}
